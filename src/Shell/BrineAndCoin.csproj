<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>BrineAndCoin</RootNamespace>
    <AssemblyName>Portraits in Brick and Time - Brine And Coin</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NetAF" Version="3.8.6" />
    <PackageReference Include="SoundFlow" Version="1.3.0" />
    <PackageReference Include="Splat" Version="17.1.1" />
    <PackageReference Include="Velopack" Version="0.0.1298" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Assets\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
