<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BrineAndCoin.Launcher.MainWindow" Icon="icon.ico" WindowStartupLocation="CenterScreen"
        Title="Portraits in Brick and Time - Brine and Coin">
    <Grid>
        <StackPanel Margin="15" VerticalAlignment="Stretch">
            <Image />
            <GroupBox Header="Changelog">
                <md:MarkdownScrollViewer Markdown="{Binding Changelog, Mode=TwoWay}" />
            </GroupBox>
        </StackPanel>

        <Grid VerticalAlignment="Bottom" Margin="5" HorizontalAlignment="Stretch" ColumnDefinitions="*,Auto">
            <ProgressBar Height="20" Margin="10" Value="{Binding ProgressValue, Mode=TwoWay}" />
            <Button Grid.Column="1" Command="{Binding CheckForUpdatesCommand}">Launch Game</Button>
        </Grid>
    </Grid>
</Window>
